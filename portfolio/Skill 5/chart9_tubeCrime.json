{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Crime at Highbury and Islington tube station",
        "anchor": "start",
        "color": "black",
        "subtitle": "Recent crime by type of offence",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "subtitleColor": "black"
    },
    "data": {
        "url": "https://data.police.uk/api/crimes-street/all-crime?lat=51.54502&lng=-0.10752"
    },
    "transform": [
        {
            "calculate": "1",
            "as": "crime"
        }
    ],
    "width": 300,
    "height": 300,
    "mark": {
        "type": "arc",
        "innerRadius": 80
    },
    "encoding": {
        "theta": {
            "aggregate": "sum",
            "field": "crime",
            "type": "quantitative"
        },
        "color": {
            "field": "category",
            "type": "nominal",
            "scale": {
                "scheme": "turbo"
            },
            "legend": {
                "title": null
            }
        }
    }
}

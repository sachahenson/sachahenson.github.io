{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "US Unemployment rate",
        "subtitle": "The unemployment rate represents the number of unemployed as a percentage of the labor force",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/sachahenson/sachahenson.github.io/main/portfolio/Skill%206/data-Fred-UNRATE.json",
        "format": {
            "type": "json",
            "property": "observations"
        }
    },
    "transform": [
        {
            "calculate": "datum.value*0.01",
            "as": "percent"
        }
    ],
    "height": 300,
    "width": 300,
    "mark": {
        "type": "line",
        "point": false
    },
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "axis": {
                "title": null,
                "grid": false,
                "labelSeparation": 10
            }
        },
        "y": {
            "field": "percent",
            "type": "quantitative",
            "title": null,
            "axis": {
                "grid": true,
                "format": "%"
            }
        },
        "color": {
            "timeUnit": "year",
            "field": "date",
            "title": "Year",
            "scale": {
                "scheme": "viridis"
            }
        },
        "tooltip": [
            {
                "field": "year_date",
                "type": "temporal",
                "title": "Year"
            },
            {
                "field": "value",
                "type": "quantitative",
                "title": "Unemployment(%)",
                "format": ".2f"
            }
        ]
    }
}
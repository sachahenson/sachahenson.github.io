{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "US dollar to Pound Sterling spot exchange rate",
    "title": {
        "text": "US Dollar to Pound Sterling spot exchange rate",
        "subtitle": "Noon buying rate of US Dollar for 1 Pound Sterling",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/sachahenson/sachahenson.github.io/main/portfolio/Skill%206/data-Fred-DEXUSUK.json",
        "format": {
            "type": "json",
            "property": "observations"
        }
    },
    "height": 300,
    "width": 300,
    "mark": {
        "type": "line",
        "point": false,
        "color": "red"
    },
    "encoding": {
        "x": {
            "field": "date",
            "type": "temporal",
            "axis": {
                "title": null,
                "grid": false,
                "labelSeparation": 10
            }
        },
        "y": {
            "field": "value",
            "type": "quantitative",
            "title": null,
            "scale": {
                "domain": [
                    1,
                    2.75
                ]
            },
            "axis": {
                "grid": true,
                "format": "$.2s"
            }
        },
        "color": {
            "timeUnit": "year",
            "field": "date",
            "title": "Year",
            "scale": {
                "scheme": "turbo"
            }
        },
        "tooltip": [
            {
                "field": "year_date",
                "type": "temporal",
                "title": "Year"
            },
            {
                "field": "value",
                "type": "quantitative",
                "title": "USD to GBP",
                "format": "$.2f"
            }
        ]
    }
}
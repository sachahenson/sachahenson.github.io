{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "description": "Productivity UK",
    "title": {
        "text": "UK productivity, 1971-2021",
        "subtitle": "Labour productivity. Output per hour worked, 2018==100. Source: ONS",
        "subtitleFontStyle": "italic",
        "fontSize": 15,
        "subtitleFontSize": 12,
        "anchor": "start",
        "color": "#e1e5e4",
        "subtitleColor": "#e1e5e4"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/RDeconomist/RDeconomist.github.io/main/charts/ukMacro/GI4.DataHub.GrowthInnovationOutputperHour.csv"
    },
    "height": 300,
    "width": 345,
    "background": "#273349",
    "mark": {
        "type": "line",
        "point": false,
        "interpolate": "monotone",
        "color": "#66CDAA"
    },
    "encoding": {
        "x": {
            "field": "Date",
            "type": "temporal",
            "axis": {
                "title": null,
                "grid": true,
                "gridColor": "#485772",
                "labelSeparation": 20,
                "ticks": false,
                "labelColor": "#e1e5e4",
                "titleColor": "#e1e5e4",
                "labelFontSize": 15
            }
        },
        "y": {
            "field": "Value",
            "type": "quantitative",
            "title": "",
            "axis": {
                "grid": true,
                "gridColor": "#485772",
                "labelColor": "#e1e5e4",
                "titleColor": "#e1e5e4",
                "labelFontSize": 13
            }
        }
    }
}

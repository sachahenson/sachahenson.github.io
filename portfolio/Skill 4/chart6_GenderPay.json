{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
    "title": {
      "text": "Gender wage gap, 2016-2020",
      "subtitle":"The difference between median earnings of men and women relative to median earnings of men",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
     "data": {
      "url": "https://raw.githubusercontent.com/sachahenson/sachahenson.github.io/main/portfolio/genderPayGap_NOR2.csv",
      "format": {"type": "csv"}
    },

    "transform":[
     
        {"filter": {
          "field": "LOCATION", 
          "oneOf": ["NOR", "NOR*2", "AUS","SWE","USA","AUS","SWE","JPN"]}
          }
      ],
  
    
    
    "height": 300,
    "width": 345,
     
     "mark": {
    "type": "line",
    "point": {
      "filled": false,
      "fill": "white"
    }
   },
   

    "encoding": {
  
      "x": {
        "field": "TIME",
        "type": "temporal",
        "title": "Year",
        "axis": {
          "grid":false,
          "format": "%Y",
          "labelSeparation": 10}
      },
  
      "y": {
        "field": "Value",
        "type": "quantitative",
        "title": "Gender pay gap, %",
        "axis": {"grid": false}
      },
  
      "color": {
        "field": "LOCATION",
        "type": "nominal",
        "scale": {"scheme": "tableau20"},
        "title": "Country",
        "legend": {
          "orient": "right", 
          "fillColor": "#FcFdFd",
          "labelExpr": "{'AUS':'Australia','NOR': 'Norway', 'NOR*2': 'Norway*2','JPN': 'Japan', 'SWE':'Sweden','USA':'USA'}[datum.label]"}
          
      }
  }
  }
